<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.teambuild.AcceptJoinRequestFragment"
    android:background="@color/bg_popup">


    <FrameLayout
        android:id="@+id/fl_leader_check_request_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_leader_check_request_bg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_teambuild_writing_done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_leader_accept_request_background_box" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_tv_request_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/fl_leader_check_request_bg"
        app:layout_constraintEnd_toEndOf="@id/fl_leader_check_request_bg">

        <TextView
            android:id="@+id/tv_request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/suiteregular"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="짱구" />

        <FrameLayout
            android:id="@+id/fl_ic_request_profile_show_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_request_profile_show_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_leader_profile_show_btn" />

            <TextView
                android:id="@+id/tv_show_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/suiteregular"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:text="프로필 열람" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_ic_blue_accept_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="@id/fl_leader_check_request_bg"
        app:layout_constraintStart_toStartOf="@id/fl_leader_check_request_bg"
        app:layout_constraintEnd_toEndOf="@id/fl_leader_check_request_bg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_blue_accept_request_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_blue_accept_request_btn" />

        <TextView
            android:id="@+id/tv_accept_request_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/suiteregular"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="수락하기" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>