<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addsubject"
    tools:context=".presentation.home.AddSubjectFragment"
    android:background="@color/bg_popup">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_add_subject"
                android:background="@color/bg_popup"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_home_add_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_sblue_btn"
        android:fontFamily="@font/suitebold"
        android:text="추가하기"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/addsubject"
        app:layout_constraintEnd_toEndOf="@+id/addsubject"
        app:layout_constraintStart_toStartOf="@+id/addsubject" />



</androidx.constraintlayout.widget.ConstraintLayout>